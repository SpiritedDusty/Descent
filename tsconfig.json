{
    "version": "1.5.0-alpha",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "outDir": "./public/scripts",
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "./src/**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./src/Game.ts",
        "./src/IWall.ts",
        "./src/Player.ts",
        "./src/PlayerDirection.ts",
        "./src/Vector2.ts",
        "./src/main.ts"
    ]
}
